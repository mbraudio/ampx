<resources>

    <!-- Declare custom theme attributes that allow changing which styles are
         used for button bars depending on the API level.
         ?android:attr/buttonBarStyle is new as of API 11 so this is
         necessary to support previous API levels. -->
    <declare-styleable name="ButtonBarContainerTheme">
        <attr name="metaButtonBarStyle" format="reference" />
        <attr name="metaButtonBarButtonStyle" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomButton">
        <attr name="buttonImageBackground" format="reference" />
        <attr name="buttonImageActive" format="reference" />
        <attr name="buttonText" format="string" localization="suggested" />
        <attr name="buttonTextViewTopPadding" format="dimension" />
        <attr name="buttonTintActiveImage" format="boolean" />
        <attr name="buttonImageAlwaysVisible" format="boolean" />
    </declare-styleable>

    <declare-styleable name="ModernButton">
        <attr name="modernButtonActive" format="boolean" />
        <attr name="modernButtonNormalText" format="string" />
        <attr name="modernButtonActiveText" format="string" />
        <attr name="modernButtonTextSize" format="dimension" />
        <attr name="modernButtonNormalImage" format="reference" />
        <attr name="modernButtonActiveImage" format="reference" />
        <attr name="modernButtonActiveColor" format="integer" />
    </declare-styleable>

    <declare-styleable name="GaugeViewEx">
        <attr name="numberOfDivisionsEx" format="integer" />
        <attr name="divisionValueEx" format="integer" />
        <attr name="maximumValueEx" format="integer" />
        <attr name="valueTextHeightEx" format="dimension" />
        <attr name="unitEx" format="string" />
        <attr name="valueTextBoldEx" format="boolean" />
        <attr name="gaugeActive" format="boolean" />
        <attr name="gaugeNormalImage" format="reference" />
        <attr name="gaugeActiveImage" format="reference" />
    </declare-styleable>

    <declare-styleable name="GaugeViewSimple">
        <attr name="maximumValueSimple" format="integer" />
        <attr name="titleTextHeightSimple" format="dimension" />
        <attr name="valueTextHeightSimple" format="dimension" />
        <attr name="valueTextBoldSimple" format="boolean" />
        <attr name="titleSimple" format="string" />
        <attr name="minText" format="string" />
        <attr name="maxText" format="string" />
        <attr name="valueAbsolute" format="boolean" />
    </declare-styleable>

</resources>
